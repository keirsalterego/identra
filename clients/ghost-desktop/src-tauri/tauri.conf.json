{
  "productName": "ghost-desktop",
  "version": "0.1.0",
  "identifier": "com.ghost-desktop.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Identra Ghost",
        "url": "/",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "visible": true
      },
      {
        "label": "launcher",
        "title": "Launcher",
        "url": "/launcher",
        "width": 600,
        "height": 100,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}